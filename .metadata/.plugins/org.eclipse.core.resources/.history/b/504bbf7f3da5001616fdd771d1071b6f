import java.awt.*;
import java.awt.event.*;
import javax.swing.*;
import javax.swing.tree.*;
import java.util.*;

public class AdminPanel {

	private static AdminPanel instance = new AdminPanel();
	
	JTree jtr;
	
	ArrayList <GroupComponent> userGroups = new ArrayList <GroupComponent> ();
	ArrayList <GroupComponent> users = new ArrayList <GroupComponent> ();
	
	GroupComponent root = new UserGroup("root");
	
	DefaultMutableTreeNode groupSystem = new DefaultMutableTreeNode(root);
	
	private AdminPanel() {
		userGroups.add(root);
		// create frame
		JFrame jfrm = new JFrame("Admin");
		jfrm.getContentPane().setLayout(new BorderLayout());
		jfrm.setSize(600, 275);
		jfrm.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		
		JPanel panel = new JPanel(new BorderLayout());
		
		jtr = new JTree(groupSystem);
		jtr.getSelectionModel().setSelectionMode(TreeSelectionModel.SINGLE_TREE_SELECTION);
		
		JTextField jtfGroup = new JTextField();
		jtfGroup.setColumns(10);
		
		JButton addGroupButton = new JButton("Add Group");
		addGroupButton.addActionListener(new ActionListener () {
			public void actionPerformed(ActionEvent e) {
				addAGroup(jtfGroup.getText(), (DefaultMutableTreeNode) jtr.getSelectionPath().getLastPathComponent());
			}
		});
		
		JTextField jtfUser = new JTextField();
		jtfUser.setColumns(10);
		
		JButton addUserButton = new JButton("Add User");
		addUserButton.addActionListener(new ActionListener () {
			public void actionPerformed(ActionEvent e) {
				addAUser(jtfUser.getText(), (DefaultMutableTreeNode) jtr.getSelectionPath().getLastPathComponent());
			}
		});
		
		JScrollPane jsp = new JScrollPane(jtr);
		
		panel.add(jsp);
		
		
		JPanel [][] panelHolder = new JPanel[5][2];
		JPanel panel2 = new JPanel(new GridLayout(5, 2));
		
		for(int m = 0; m < 5; m++) {
			for(int n = 0; n < 2; n++) {
				panelHolder[m][n] = new JPanel();
				panel2.add(panelHolder[m][n]);
			}
		}
		
		panel.add(jtr);
		
		panelHolder[0][0].add(jtfGroup);
		panelHolder[0][1].add(addGroupButton);
		panelHolder[1][0].add(jtfUser);
		panelHolder[1][1].add(addUserButton);
		
		jfrm.add(panel, BorderLayout.WEST);
		jfrm.add(panel2, BorderLayout.LINE_END);
		
		jfrm.getContentPane().add(panel);
		jfrm.setVisible(true);
	}
	
	private void addAGroup(String name, DefaultMutableTreeNode parentGroup) {
		if (!(parentGroup instanceof UserGroup))
			parentGroup = (DefaultMutableTreeNode) groupSystem.getRoot();
		for (GroupComponent gc : userGroups)
			if (gc.toString().equals(userGroups.toString()))
				return;
		GroupComponent userGroup = new UserGroup(name);
		parentGroup.add(userGroup);
		userGroups.add(userGroup);		
	}
	
	private void addAUser(String name, DefaultMutableTreeNode parentGroup) {
		if (!(parentGroup instanceof UserGroup))
			parentGroup = (DefaultMutableTreeNode) groupSystem.getRoot();
		for (GroupComponent gc : users)
			if (gc.toString().equals(users.toString()))
				return;
		User user = new User(name);
		users.add(user);
		parentGroup.add(users.get(users.size() - 1));
	}
	
	public static AdminPanel getInstance() {
		return instance;
	}
}
