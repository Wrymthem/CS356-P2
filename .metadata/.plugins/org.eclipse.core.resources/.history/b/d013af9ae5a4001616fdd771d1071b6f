import java.util.*;

public class User extends GroupComponent implements Subject, Observer {
	
	private String userName;
	
	private List <Observer> followers = new ArrayList <Observer> ();
	private List <Subject> following = new ArrayList <Subject> ();
	
	private Tweet tweet;
	
	User(String userName) {
		this.userName = userName;
	}
	
	public List <Observer> getFollowers() {
		return this.followers;
	}
	
	public List <Subject> getFollowing() {
		return this.following;
	}
	
	public String getUserName() {
		return this.userName;
	}

	public void update(Tweet tweet) {
		this.tweet = tweet;
	}

	public void follow(User u) {
		following.add(u);
		u.subscribe(this);
	}
	
	public void subscribe(Observer o) {
		followers.add(o);
	}

	public void notifyFollowers() {
		for (Observer o : followers)
			o.update(tweet);
	}
}
