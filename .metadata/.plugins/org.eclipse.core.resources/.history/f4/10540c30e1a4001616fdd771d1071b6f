import java.awt.*;
import javax.swing.*;

public class AdminPanel {

	private static AdminPanel instance = new AdminPanel();
	
	JTextArea jta;
	JScrollPane jsp;
	
	GroupComponent root = new UserGroup("Root");
	
	private AdminPanel() {
		// create frame
		JFrame jfrm = new JFrame("Admin");
		jfrm.getContentPane().setLayout(new GridBagLayout());
		jfrm.setSize(400, 275);
		jfrm.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		
		jta = new JTextArea();
		jta.setText("asdkjfhalskjdfhlakjethlaieuyalkdfnalkjthoeiutyalskjdfnaleuyqoiwetuyqwekjhaljfh");
		jta.setEditable(true);
		
		jsp = new JScrollPane(jta, JScrollPane.VERTICAL_SCROLLBAR_AS_NEEDED,
                JScrollPane.HORIZONTAL_SCROLLBAR_AS_NEEDED);
		
		JPanel leftSide = new JPanel();
		
		leftSide.add(jsp);
		
		jfrm.getContentPane().add(leftSide);
		
		jfrm.setVisible(true);
	}
	
	public static AdminPanel getInstance() {
		return instance;
	}
}
